<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.CreateNewUser"
             Title="Create New User">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name and Age fields are required" 
                   FontAttributes="Italic"
                   HorizontalOptions="Center"/>
            <Entry x:Name="NameField"
                   Placeholder="Name"/>
            <Entry x:Name="SurnameField"
                   Placeholder="Surname"/>
            <Entry x:Name="AgeField"
                   Placeholder="Age"/>
            <Button x:Name="createUserButton"
                    Text="Create User"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="createUserButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>