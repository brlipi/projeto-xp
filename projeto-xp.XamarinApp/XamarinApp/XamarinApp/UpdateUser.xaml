<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.UpdateUser"
             Title="Update User">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Change the fields you want to update" 
                   FontAttributes="Italic"
                   HorizontalOptions="Center"/>
                <Entry x:Name="NameField"
                       Placeholder="Name"/>
                <Entry x:Name="SurnameField"
                       Placeholder="Surname"/>
                <Entry x:Name="AgeField"
                       Placeholder="Age"/>
                <Button x:Name="updateUserButton"
                    Text="Create User"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Clicked="updateUserButton_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>